{% extends "base.html.twig" %}

{% block title %}Modification d'un livre{% endblock %}

{% block content %}
<p>&larr;&nbsp;<a href="/index.php">Retourner à la liste</a></p>

<!-- Formulaire de modification -->
<form action="/update.php" method="post">
    <input type="hidden" id="id" name="id" value="{{ entity._id }}">

    <label for="title">Titre :</label>
    <input type="text" id="title" name="title" value="{{ entity.titre }}" size="100">

    <label for="author">Auteur :</label>
    <input type="text" id="author" name="author" size="50" value="{{ entity.auteur or '' }}">

    <label for="century">Siècle :</label>
    <input type="number" id="century" name="century" value="{{ entity.siecle }}" />

    <label for="edition">Édition :</label>
    <input type="text" id="edition" name="edition" size="50" value="{{ entity.edition or '' }}">

    <label for="language">Langue :</label>
    <input type="text" id="language" name="language" size="50" value="{{ entity.langue or '' }}">

    <label for="cote">Cote :</label>
    <input type="text" id="cote" name="cote" size="50" value="{{ entity.cote or '' }}">

    <button type="submit">Enregistrer</button>
</form>
{% endblock %}
